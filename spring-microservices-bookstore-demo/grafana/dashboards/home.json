{
  "uid": "cloudshelf-home",
  "title": "CloudShelf â€¢ EC2 Host (Node Exporter)",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    { "type": "gauge", "title": "CPU Utilization (%)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 } },
      "targets": [
        { "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[2m])) * 100)" }
      ] },
    { "type": "gauge", "title": "Memory Used (%)",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 } },
      "targets": [
        { "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100" }
      ] },
    { "type": "gauge", "title": "Root FS Used (%)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 } },
      "targets": [
        { "expr": "(1 - (node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\"})) * 100" }
      ] },
    { "type": "timeseries", "title": "Network I/O (bytes/s)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "fieldConfig": { "defaults": { "unit": "Bps" } },
      "targets": [
        { "expr": "rate(node_network_receive_bytes_total{device!~\"lo\"}[2m])", "legendFormat": "{{device}} RX" },
        { "expr": "rate(node_network_transmit_bytes_total{device!~\"lo\"}[2m])", "legendFormat": "{{device}} TX" }
      ] },
    { "type": "timeseries", "title": "Load Average (1m)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus-ds" },
      "targets": [ { "expr": "node_load1" } ] }
  ]
}
